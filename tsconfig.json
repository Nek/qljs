{
  "compilerOptions": {
    "outDir": "./lib/",
    "sourceMap": true,
    "noImplicitAny": false,
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "target": "es5",
    "downlevelIteration": true,
    "declaration": true,
    "lib": [
      "es2019", "dom"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
